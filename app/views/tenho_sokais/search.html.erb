<%= form_with(url: search_tenho_sokais_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "ユーザー名を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row">
  <% @scblogs.each do |scblog| %>
    <%= link_to scblog.scb_name1, tenho_sokai_path(username: scblog.scb_name1) %>
    <%= link_to scblog.scb_name2, tenho_sokai_path(username: scblog.scb_name2) %>
    <%= link_to scblog.scb_name3, tenho_sokai_path(username: scblog.scb_name3) %>
    <%= link_to scblog.scb_name4, tenho_sokai_path(username: scblog.scb_name4) %>
  <% end %>
</div>
